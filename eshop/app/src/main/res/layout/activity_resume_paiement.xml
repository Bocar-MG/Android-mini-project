<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#805F5F"
    android:orientation="vertical"
    tools:context=".resume_paiement">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#80BCB4B4"
        android:text="Resume et paiement"
        android:textAlignment="center"
        android:textSize="24dp" />

    <ListView
        android:id="@+id/list_panier"
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:background="#FAF6F6" />

    <EditText
        android:id="@+id/code_carte"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="#F3EBEB"
        android:ems="10"
        android:hint="Numero carte"
        android:inputType="number" />

    <EditText
        android:id="@+id/cvv_code"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="#F6F0F0"
        android:ems="10"
        android:hint="CVV"
        android:inputType="number" />

    <Button
        android:id="@+id/paiement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="60dp"
        android:text="payer" />

</LinearLayout>